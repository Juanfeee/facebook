---
interface Props {
  title: string;
}

const { title } = Astro.props;
const pageUrl = new URL(Astro.url.pathname, "https://juanfeee.github.io").href;
const previewImage = "https://juanfeee.github.io/facebook/assets/preview.jpg";
const timestamp = Date.now(); // Cache buster Ãºnico
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="description" content="Facebook te ayuda a comunicarte y compartir con las personas que forman parte de tu vida." />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`${pageUrl}?v=${timestamp}`} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Facebook te ayuda a comunicarte y compartir con las personas que forman parte de tu vida." />
    <meta property="og:image" content={`${previewImage}?v=${timestamp}`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Vista previa de Facebook" />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="Facebook te ayuda a comunicarte y compartir con las personas que forman parte de tu vida." />
    <meta name="twitter:image" content={`${previewImage}?v=${timestamp}`} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/logo.png" />

    <!-- Cache Control -->
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />

    <!-- Fonts and Scripts -->
    <script src="/placeholder.js" defer></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link href="https://fonts.cdnfonts.com/css/helvetica-neue-5" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&family=Ruda:wght@400..900&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.cdnfonts.com/css/helvetica-neue-55" />
    
    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />
  </head>

  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: "Helvetica Neue", "Rubik", "Times New Roman";
    background: #ffffff;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>